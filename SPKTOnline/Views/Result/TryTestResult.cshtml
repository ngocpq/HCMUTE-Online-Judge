@model IEnumerable<SPKTOnline.Models.Student_Submit>
@{
    ViewBag.Title = "TryTestResult";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div class="webtitle">
    Danh sách bài thi thử của bạn</div>
<p>@ViewBag.Message</p>
@if (Model.Count() != 0)
{
    <table style="width: 650px">
        <tr>
            <th>
                Tên câu hỏi
            </th>
            <th>
                Thời gian gửi bài
            </th>
            <th>
                Trạng thái chấm
            </th>
            <th>
                Số điểm
            </th>
            <th>
                Môn học
            </th>
            <th>
                Xử lý
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Problem.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SubmitTime)
                </td>
                <td>
                 @if (@item.TrangThaiCham == 1)
                 {
                    @Html.Display("Đã chấm")
                 }
                 else
                 {
                    @Html.Display("Chưa chấm")
                 }
        
                </td>
                    <td>
                        @if (@item.TrangThaiCham == 1)
                        {
                           
                          
                        }
                        else
                        {
                            @Html.Display(string.Empty)
                        }
                    </td>
                    <td>
                    </td>
                    <td>
                    </td>
            </tr>
        }
    </table>
}

else
{ 
    <p>
        Bạn chưa làm bài nào!
    </p>
}
<p>
    @Html.ActionLink("Xem câu hỏi", "Browse", "Problem")
</p>
