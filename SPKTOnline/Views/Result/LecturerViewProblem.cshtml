@model IEnumerable<SPKTOnline.Models.Problem>
@{
    ViewBag.Title = "LecturerViewProblem";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div class="webtitle">
    Danh sách câu hỏi</div>
@if (Model.Count() != 0)
{
    <table style="width:650px">
        <tr>
            <th>
                Mã câu hỏi
            </th>
            <th>
               Tên câu hỏi
            </th>
            <th>
               Nội dung
            </th>
            <th>
               Độ khó
            </th>
             <th>
               Hình thức so sánh
            </th>
            <th>
               Môn học
            </th>
             <th>
              Xử lý
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Content)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Difficulty.Name)
                </td>
                <td>
                    @if (item.Comparer != null)
                    {
                        @Html.DisplayFor(modelItem => item.Comparer.Name)
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => item.ComparerParameter)
                    }
                </td>
                <td>
                       @Html.DisplayFor(modelItem=>item.Subject.Name)
                   
                </td>
                <td>
                    
                </td>
                <td>
                     @Html.ActionLink("Xem kết quả", "LecturerViewTryResult", "Result", new { ProblemID = (int?)item.ID }, new AllowHtmlAttribute()) 
                </td>
            </tr>
        }
    </table>
}

else
{ 
    <p>
        Bạn chưa tạo câu hỏi nào!
    </p>
}
<p>
    @Html.ActionLink("Thêm câu hỏi bằng Upload", "Upload", "UploadProblem")<br />
    @Html.ActionLink("Hoặc thêm câu hỏi bằng text", "CreateProblem", "Problem")
</p>
