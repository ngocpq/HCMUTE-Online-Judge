@model IEnumerable<SPKTOnline.Models.Student_Submit>
@{
    ViewBag.Title = "TryTestAllResult";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div class="webtitle">
    Danh sách bài thi thử của bạn</div>
<p>@ViewBag.Message</p>

@if (Model.Count() != 0)
{
    <table style="width: 650px">
        <tr>
            <th>
                Mã câu hỏi
            </th>
            <th>
                Tên câu hỏi
            </th>
            <th>
                Thời gian gửi bài
            </th>
            <th>
                Trạng thái chấm
            </th>
            <th>
                Kết quả biên dịch
            </th>
            <th>
                Tổng điểm
            </th>
            <th>
                Chi tiết
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td class="classColumnMiddle">
                    @Html.ActionLink( item.ProblemID.ToString(), "Details","Problem", new { ID = (int?)item.ProblemID},null)<br />
                    <span id="i">(SLComment:@item.CommentTotal)</span>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Problem.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SubmitTime)
                  
                </td>
                <td>
                   @Html.DisplayFor(modelItem => item.TrangThai)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.KetQuaBienDich)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TongDiem)
                </td>
                <td>
                    @Html.ActionLink("Xem", "TryTestResult", new { ID = (int?)item.ID, Message = "" })
                </td>
            </tr>
        }
    </table>
}

else
{ 
    <p>
        Bạn chưa làm bài nào!
    </p>
}
