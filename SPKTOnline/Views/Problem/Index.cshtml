@model IEnumerable<SPKTOnline.Models.Subject>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div class="webtitle">
    Danh sách chủ đề</div>
<fieldset>
    <legend>Câu hỏi theo môn học</legend>
     @using (Html.BeginForm())
     {
         if (Model.Count() != 0)
         {
             foreach (var subject in Model)
             {
                
                     @Html.ActionLink(@subject.Name, "Browse", new { ID = subject.ID })
                     <br />
                
             }
         }
     }
</fieldset>
<fieldset>
    <legend>Câu hỏi theo độ khó</legend>
     @using (Html.BeginForm())
     {
            @Html.DropDownList("DifficultyID", "Độ khó")
     }
</fieldset>