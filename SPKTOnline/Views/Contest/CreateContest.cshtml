@model SPKTOnline.Models.Contest
@{
    ViewBag.Title = "CreateContest";
    Layout = "~/Views/Shared/_Layout.cshtml";
    }
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div class="webtitle">
    Tạo Kỳ Thi</div>
<p style="margin-left:25px;">
        Nhập các thông tin cần thiết để tạo kỳ thi!
    </p>
@using (Html.BeginForm())
{
    <div style="float: left; width: 100%;">
        <div style="float: left; width: 15%;">
        <img src="../../Content/Images/text_x_copying.ico" alt="Create Contest" /></div>
        <div style="float: left; margin-left:10%; width: 70%;">
            <div class="editor-label">
                @Html.Label("Đề thi ")
               
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.ExamID)
            </div>
            <div class="editor-label">
                @Html.Label("Thời gian bắt đầu")
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.StartTime)
                @Html.ValidationMessageFor(m => m.StartTime)
            </div>
            <div class="editor-label">
                @Html.Label("Thời gian kết thúc")
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m=>m.EndTime)
                @Html.ValidationMessageFor(m => m.EndTime)
            </div>
            <div class="editor-label">
                @Html.CheckBoxFor(m => m.IsOpen)
                @Html.LabelFor(m => m.IsOpen)
            </div>
            <p>
                <input type="submit" value="Submit" />
            </p>
   
    </div>
    </div>
}
