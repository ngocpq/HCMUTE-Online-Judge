@model SPKTOnline.Models.Contest
@{
    ViewBag.Title = "CreateContest";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div class="webtitle">
    Tạo Kỳ Thi</div>
<p style="margin-left: 25px;">
    Nhập các thông tin cần thiết để tạo kỳ thi cho môn: @Html.DisplayFor(model=>model.Class.Subject.Name) <span>-&nbsp Nhóm: </span> @Html.DisplayFor(model => model.Class.Group) 
    <span>-&nbsp Học kỳ: &nbsp</span>@Html.DisplayFor(model => model.Class.Term)<span>- &nbsp Năm học: &nbsp</span>@Html.DisplayFor(model => model.Class.SchoolYear)
</p>
@using (Html.BeginForm())
{
    <div style="float: left; width: 100%;">
        <div style="float: left; width: 15%;">
            <img src="../../Content/Images/text_x_copying.ico" alt="Create Contest" /></div>
        <div style="float: left; margin-left: 10%; width: 70%;">
            <div class="editor-label">
                @Html.Label("Tên kỳ thi (*)")
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.Name)
                @Html.ValidationMessageFor(m => m.Name)
            </div>
            <div class="editor-label">
                @Html.Label("Mô tả cho kỳ thi")
            </div>
            <div class="editor-field">
                @Html.TextAreaFor(model => model.Description, 15, 55, new { @style = "resize: none;" })
                @Html.ValidationMessageFor(m => m.Description)
            </div>
            <div class="editor-label">
                @Html.Label("Thời gian bắt đầu")
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.StartTime)<span><i>(tháng/ngày/năm)</i></span>
                @Html.ValidationMessageFor(m => m.StartTime)
            </div>
            <div class="editor-label">
                @Html.Label("Thời gian kết thúc")
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.EndTime)<span><i>(tháng/ngày/năm)</i></span>
                @Html.ValidationMessageFor(m => m.EndTime)
            </div>
            <div class="editor-label">
                @Html.Label("Số lần submit tối đa")<br />
               
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.SubmitLimit)<i>(Quá số lượng submit này thí sinh sẽ bị trừ điểm theo thang điểm bên dưới)</i>
                @Html.ValidationMessageFor(m => m.SubmitLimit)
            </div>
            <div class="editor-label">
                @Html.Label("Số điểm sẽ bị trừ")
                 
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.SubmitLimit)<i>(Quá số lượng submit này thí sinh sẽ bị trừ điểm theo thang điểm bên dưới)</i>
                @Html.ValidationMessageFor(m => m.SubmitLimit)
            </div>
            <div class="editor-label">
                @Html.Label("Tổng điểm")
                 
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.TotalScore)
                @Html.ValidationMessageFor(m => m.TotalScore)
            </div>
            <div class="editor-label">
                @Html.CheckBoxFor(m => m.IsOpen)
                @Html.LabelFor(m => m.IsOpen)
            </div>
      
        
            <p>
                <input type="submit" value="Tiếp theo" />
            </p>
        </div>
    </div>
}
