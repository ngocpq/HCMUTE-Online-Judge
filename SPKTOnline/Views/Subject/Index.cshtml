@model IEnumerable<SPKTOnline.Models.Subject>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div class="webtitle">
    Danh sách môn học</div>
@if (Model.Count() != 0)
{
    <table style="width:650px">
        <tr>
            <th>
                Mã môn học
            </th>
            <th>
                Tên môn học
            </th>

            <th>
                Công cụ
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditSubject", new { id = item.ID }) |
                    @Html.ActionLink("Delete", "DeleteSubject", new { id = item.ID })
                </td>
            </tr>
        }
    </table>
}

else
{ 
    <h1>
        Chưa có môn học nào!
    </h1>
}
<p>
    @Html.ActionLink("Thêm môn học", "AddSubject")
</p>
