@model SPKTOnline.Models.Exam
@{
    ViewBag.Title = "CreateExam";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div class="webtitle">
    Tạo đề thi</div>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Đề thi</legend>
        <div>
        Bạn đang tạo đề thi cho môn:
        
        
        @Html.DisplayFor(model => model.Class.Subject.Name) <span>-&nbsp Nhóm </span> @Html.DisplayFor(model => model.Class.Group) 
        <span>-&nbsp Học kỳ &nbsp</span>@Html.DisplayFor(model => model.Class.Term)<span>- &nbsp Năm học &nbsp</span>@Html.DisplayFor(model => model.Class.SchoolYear)
        
        @Html.HiddenFor(m=>m.ClassID)

        </div>
        <div class="editor-label">
            @Html.Label("Mô tả đề thi")
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Description, 15, 75, new { @style = "resize: none;" })
            @Html.ValidationMessageFor(model => model.Description)
        </div>
        <div class="editor-label">
            @Html.Label("Đề thi này dành cho sinh viên luyện tập ngay?") @Html.CheckBoxFor(model => model.IsPublic)
        </div>
    </fieldset>
    
    <p>
        <input class="button" type="submit" value="Tiếp tục" />
    </p>
}
