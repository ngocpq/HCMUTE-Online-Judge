@model IEnumerable<SPKTOnline.Models.Notification>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div class="webtitle">
    Tất cả thông báo</div>
@Html.Partial("ViewNotificationPartial",Model)
<br />
<br />
@if (User.IsInRole("Lecturer") || User.IsInRole("Admin"))
{
    <button name="button" type="button" onclick="document.location.href=$('#CreateUrl').attr('href')">Tạo Thông Báo</button>
       <a id="CreateUrl" href="@Html.AttributeEncode(Url.Action("CreateNotification", "Notification", new { ClassID = 0 }))" style="display:none;"></a>
  <br />    
}