@model SPKTOnline.Models.Notification
@{
    ViewBag.Title = "CreateNotification";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="../../fckeditor/fckeditor.js" type="text/javascript"></script>
<script type="text/javascript">
    window.onload = function () {
        var sBasePath = '@Url.Content("~/fckeditor/")';
        var oFCKeditor = new FCKeditor('content');
        oFCKeditor.BasePath = sBasePath;
        oFCKeditor.Height = 450;
        oFCKeditor.ReplaceTextarea();
    }
</script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div class="webtitle">
    Tạo thông báo mới</div>
@using (Html.BeginForm())
{
  <div style="float: left; width: 100%;">
        <div style="float: left; width: 15%;">
        <img src="../../Content/Images/notice.png" alt="" /></div>
        <div style="float: left; width: 85%;">
    @Html.HiddenFor(model=>model.ClassID)
    <div class="editor-label">
            @Html.LabelFor(model => model.Name, "Tiêu đề")
        </div>
         <div class="editor-field">
            @Html.TextBoxFor(model=>model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>
      <div class="editor-label">
            @Html.LabelFor(model => model.Body, "Nội dung")
        </div>
     @Html.TextAreaFor(model => model.Body, 30, 82, new { @class = "ckeditor", @id = "content" })
     <p>
                <input type="submit" value="Hoàn tất" />
     </p>
     </div>
     </div>

}