@model IEnumerable<SPKTOnline.Models.Class>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div class="webtitle">
    Danh sách lớp học hiện tại</div>
@if (Model.Count() != 0)
{
    foreach (var item in Model)
    {
        SPKTOnline.Management.CheckRoles checkRole = new SPKTOnline.Management.CheckRoles();
        if (checkRole.IsLecturer(User.Identity.Name) && item.LecturerID==User.Identity.Name)
        {
    <div>
        <a href="ClassDetailOfLecturer/@item.ID" class="areadmore">
            <img alt="button" src="../../Content/Images/favicon.ico" />
            <b>@Html.DisplayFor(modelitem => item.Subject.Name)&nbsp-&nbsp<span>Nhóm(@Html.DisplayFor(modelItem => item.Group))</span></b>
            <span>Giảng
                viên(@Html.DisplayFor(modelitem => item.User.LastName) @Html.DisplayFor(modelitem => item.User.FirstName))</span>&nbsp-&nbsp<span>Học
                    kỳ(@Html.DisplayFor(modelitem => item.Term))</span>&nbsp-&nbsp<span>Năm học(@Html.DisplayFor(modelitem => item.SchoolYear))</span>
        </a>
    </div>
        }
        else
        {
    <div>
        <a href="ClassDetail/@item.ID" class="areadmore">
            <img alt="button" src="../../Content/Images/favicon.ico" />
            <b>@Html.DisplayFor(modelitem => item.Subject.Name)&nbsp-&nbsp<span>Nhóm(@Html.DisplayFor(modelItem => item.Group))</span></b>
            <span>Giảng
                viên(@Html.DisplayFor(modelitem => item.User.LastName) @Html.DisplayFor(modelitem => item.User.FirstName))</span>&nbsp-&nbsp<span>Học
                    kỳ(@Html.DisplayFor(modelitem => item.Term))</span>&nbsp-&nbsp<span>Năm học(@Html.DisplayFor(modelitem => item.SchoolYear))</span>
        </a>
    </div> 
        }

    }
}
else
{ 
    <h1>
        Chưa có lớp học nào!
    </h1>
}
