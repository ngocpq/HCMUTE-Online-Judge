@model SPKTOnline.Models.ClassModels
@{
    ViewBag.Title = "CreateClass";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div class="webtitle">
    Tạo lớp học</div>
    @ViewBag.Message
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Thông tin lớp học</legend>
        <div class="editor-label">
            @Html.LabelFor(model => model.SubjectID, "Lớp học thuộc môn")
        </div>
         <div class="editor-field">
            @Html.DropDownList("SubjectID", string.Empty)
            @Html.ValidationMessageFor(model => model.SubjectID)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Group, "Lớp học thuộc nhóm")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Group)
            @Html.ValidationMessageFor(model => model.Group)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.LecturerID, "Giảng viên")
        </div>
        <div class="editor-field">
            @Html.DropDownList("LecturerID", string.Empty)
            @Html.ValidationMessageFor(model => model.LecturerID)
        </div>

       <div class="editor-label">
            @Html.LabelFor(model => model.Term, "Học kỳ")
        </div>
        <div class="editor-field">
            @Html.DropDownList("Term", string.Empty)
            @Html.ValidationMessageFor(model => model.Term)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.SchoolYear, "Năm học")
        </div>
        <div class="editor-field">
            @Html.DropDownList("SchoolYear", string.Empty)
            @Html.ValidationMessageFor(model => model.SchoolYear)
        </div>
       </fieldset>
    <p><input class="button" type="submit" value="Thêm" /></p>
}
